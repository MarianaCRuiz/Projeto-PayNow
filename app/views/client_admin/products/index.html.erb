<div class="container">
  <h2>
    <% if @products.empty? %>
      Nenhum produto cadastrado
    <% else %>
      Produtos cadastrados
    <% end %>
  </h2> <br>
  <div>
    <% @products.each do |product|%>
    <div class="container">
      <p>Nome: <%= link_to "#{product.name}", client_admin_company_product_path(product.company.token, product.token), class:"btn btn-success" %>, Pre√ßo: <%= number_to_currency product.price %></p>
    </div>
    <% end %>
  </div>
  <%= link_to 'Registrar produto', new_client_admin_company_product_path(current_user.company.token) , class:"btn btn-primary" %>
  <%= link_to 'Voltar', client_admin_company_path(current_user.company.token) , class:"btn btn-primary btn-sm" %>
</div>