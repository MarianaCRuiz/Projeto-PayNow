<% if product.errors.any? %>
  <p>Foram encontrados <%= product.errors.count %> erro(s):</p>
  <ul>
    <%  product.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with url: url, model: [:client_admin, company, product] do |f| %>
  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :boleto_discount %>
    <%= f.number_field :boleto_discount, step: 0.01, class:"form-control" %>
  </div>
    <div class="field form-group">
    <%= f.label :credit_card_discount %>
    <%= f.number_field :credit_card_discount, step: 0.01, class:"form-control" %>
  </div>
    <div class="field form-group">
    <%= f.label :pix_discount %>
    <%= f.number_field :pix_discount, step: 0.01, class:"form-control" %>
  </div>
  <%= f.submit button_text, class:"btn btn-success mb-1 mt-1" %>
<% end %>
