<div class="container">
  <h2>Opções de pagamento escolhidas</h2> <br>
  <div>
    <% @payments_chosen.each do |option|%>
    <div class="container">
      <p><% if option.icon.persisted? %>
        <%= image_tag option.icon, size:'50' %>
        <% end %>
      <%= option.name %>, Taxa(%): <%= option.fee %>, Taxa máxima(R$): <%= option.max_money_fee %>
      </p>
    </div>
    <% end %>
  </div>
  <div>
    <% @boletos.each do |boleto|%>
    <div class="container">
      <p><%= boleto.name %>, Código do Banco: <%= boleto.bank_code %>, Agência: <%= boleto.agency_number %>,
       Conta: <%= boleto.account_number %>
      </p>
    </div>
    <% end %>
  </div>
  <div>
    <% @credit_cards.each do |credit_card|%>
    <div class="container">
      <p><%= credit_card.name %> Código da operadora: <%= credit_card.credit_card_operator_token %>
      </p>
    </div>
    <% end %>
  </div>
  <% @pixies.each do |pix|%>
    <div class="container">
      <p><%= pix.name %>, Chave PIX <%= pix.pix_key %>, Código do Banco: <%= pix.bank_code %>
      </p>
    </div>
    <% end %>
  </div>
  <% if user_signed_in? %>
      <%= link_to 'Adicionar opção de pagamento', client_admin_payment_options_path , class:"btn btn-primary btn-sm" %>
  <% end %>
  <%= link_to 'Voltar', client_admin_company_path(current_user.company.token) , class:"btn btn-primary btn-sm" %>
</div>